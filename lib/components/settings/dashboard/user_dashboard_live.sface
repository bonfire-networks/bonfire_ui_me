  <ul>
    <Bonfire.UI.Common.ExtensionsSidebarSettingsNavLive
      showing_within={:dashboard}
      page="settings"
      selected_tab={@selected_tab}
      scope={:user}
    />
  </ul>

  <div class="pb-2 mt-12 mb-3 text-xs uppercase border-b text-base-content border-base-content/10">{l("Advanced")}</div>
  <div class="grid grid-cols-1 gap-3 mt-4">
    <LivePatch
      to={~p"/settings/extensions"}
      class="flex items-center gap-8 p-5 rounded-md shadow hover:bg-base-content/10 bg-base-content/5 group"
    >
      <Icon solid="Puzzle" class="w-6 h-6 ml-2 font-normal text-info/70" />
      <div class="flex flex-col flex-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Extensions")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("A la carte")}</div>
      </div>
    </LivePatch>
  </div>

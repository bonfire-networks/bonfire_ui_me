  <div class="pb-2 mt-12 mb-3 text-xs uppercase border-b text-base-content border-base-content/10">{l("Moderation")}</div>
  <div class="grid grid-cols-1 gap-6 mt-8 md:grid-cols-2 tablet-lg:grid-cols-3 tablet-lg:gap-y-10">
    <LivePatch
      to="/settings/flags"
      class="flex items-center gap-4 p-3 rounded-md shadow bg-base-content/5 group"
    >
      <div class="flex items-center transition rounded-full no-shrink w-14 h-14 bg-accent/90 group-hover:bg-accent place-content-center">
        <Icon outline="Flag" class="w-7 h-7" />
      </div>
      <div class="flex flex-col flex-1 gap-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Flagged")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("Review what you've flagged")}</div>
      </div>
    </LivePatch>

    <LivePatch
      to="/settings/ghosted"
      class="flex items-center gap-4 p-3 rounded-md shadow bg-base-content/5 group"
    >
      <div class="flex items-center transition rounded-full no-shrink w-14 h-14 bg-accent/90 group-hover:bg-accent place-content-center">
        <Icon outline="Ban" class="w-7 h-7" />
      </div>
      <div class="flex flex-col flex-1 gap-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Ghosted")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("People and instances who shouldn't see you")}</div>
      </div>
    </LivePatch>

    <LivePatch
      to="/settings/silenced"
      class="flex items-center gap-4 p-3 rounded-md shadow bg-base-content/5 group"
    >
      <div class="flex items-center transition rounded-full no-shrink w-14 h-14 bg-accent/90 group-hover:bg-accent place-content-center">
        <Icon outline="Ban" class="w-7 h-7" />
      </div>
      <div class="flex flex-col flex-1 gap-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Ignored / Silenced")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("People and instances you don't want to see")}</div>
      </div>
    </LivePatch>
  </div>

  <div class="pb-2 mt-12 mb-3 text-xs uppercase border-b text-base-content border-base-content/10">{l("Advanced")}</div>
  <div class="grid grid-cols-1 gap-6 mt-8 md:grid-cols-2 tablet-lg:grid-cols-3 tablet-lg:gap-y-10">
    <LivePatch
      to="/settings/extensions"
      class="flex items-center gap-4 p-3 rounded-md shadow bg-base-content/5 group"
    >
      <div class="flex items-center transition rounded-full no-shrink w-14 h-14 bg-accent/90 group-hover:bg-accent place-content-center">
        <Icon outline="Puzzle" class="w-7 h-7" />
      </div>
      <div class="flex flex-col flex-1 gap-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Extensions")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("A la carte")}</div>
      </div>
    </LivePatch>
  </div>
</div>
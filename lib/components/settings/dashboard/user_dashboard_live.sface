<div class="py-6 mb-6 text-2xl font-bold text-base-content">
  {l("Settings")}
</div>
<div class="mb-8">
  <div class="pb-2 mb-3 text-xs uppercase border-b text-base-content border-base-content/10">{l("General")}</div>
  <div class="grid grid-cols-1 gap-6 mt-8 md:grid-cols-2 tablet-lg:grid-cols-3 tablet-lg:gap-y-10">
    <LivePatch
      to="/settings/profile"
      class="flex items-center gap-4 p-3 rounded-md shadow bg-base-content/5 group"
    >
      <div class="flex items-center transition rounded-full no-shrink w-14 h-14 bg-accent/90 group-hover:bg-accent place-content-center">
        <Icon outline="User" class="w-7 h-7" />
      </div>
      <div class="flex flex-col flex-1 gap-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Profile")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("How you present yourself")}</div>
      </div>
    </LivePatch>

    <LivePatch
      to="/settings/preferences"
      class="flex items-center gap-4 p-3 rounded-md shadow bg-base-content/5 group"
    >
      <div class="flex items-center transition rounded-full no-shrink w-14 h-14 bg-accent/90 group-hover:bg-accent place-content-center">
        <Icon outline="PaperAirplane" class="w-7 h-7" />
      </div>
      <div class="flex flex-col flex-1 gap-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Preferences")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("How things should behave")}</div>
      </div>
    </LivePatch>

    <LivePatch
      to="/settings/account"
      class="flex items-center gap-4 p-3 rounded-md shadow bg-base-content/5 group"
    >
      <div class="flex items-center transition rounded-full no-shrink w-14 h-14 bg-accent/90 group-hover:bg-accent place-content-center">
        <Icon outline="Key" class="w-7 h-7" />
      </div>
      <div class="flex flex-col flex-1 gap-1">
        <div class="text-sm font-bold transition text-base-content/80 group-hover:text-base-content/100">{l("Edit account")}</div>
        <div class="text-sm font-light text-base-content/70 group-hover:text-base-content/80">{l("Email and password")}</div>
      </div>
    </LivePatch>
  </div>

<div class="p-3 w-full md:w-[360px] bg-base-100 rounded shadow">
  <div class="mx-auto">
    {#case @error || e(@form, :errors, :form, nil)}
      {#match nil}
        <div />
      {#match :taken}
        <div role="status" class="mb-4 alert alert-error">
          <div class="flex">
            <div class="flex-shrink-0">
              <Icon solid="Exclamation" />
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium">
                {l("This email is taken.")} Did you mean to <LiveRedirect to={~p"/login"}>log in</LiveRedirect>?
              </h3>
            </div>
          </div>
        </div>
      {#match {error, _} when is_binary(error)}
        <div role="status" class="mb-4 alert alert-error">
          <div class="flex">
            <div class="flex-shrink-0">
              <Icon solid="Exclamation" />
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium">
                {l("An error occurred:")} {error}
              </h3>
            </div>
          </div>
        </div>
      {#match error}
        <div role="status" class="mb-4 alert alert-error">
          <div class="flex">
            <div class="flex-shrink-0">
              <Icon solid="Exclamation" />
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium">
                {l("An error occurred:")} {error}
              </h3>
            </div>
          </div>
        </div>
    {/case}
    <Form for={@form} opts={[id: "signup-form"]}>
      <Inputs for={:email}>
        <Field name={:email_address}>
          <label for="signup-form_email_email_address" class="label">
            <span class="label-text text-xs">
              {l("Email address")}
            </span>
          </label>
          <EmailInput
            opts={placeholder: "alice@email.com"}
            required
            class="w-full h-10 rounded input input-bordered"
          />
          <ErrorTag />
        </Field>
      </Inputs>
      <Inputs for={:credential}>
        <div class="mt-3">
          <Field name={:password}>
            <Label class="label">
              <span class="label-text text-xs">
                {l("Choose a password")} ({l("10 characters minimum")})
              </span>
            </Label>
            <PasswordInput
              opts={placeholder: l("Type a strong password")}
              required
              class="w-full h-10 rounded input input-bordered"
            />
            <ErrorTag />
          </Field>
        </div>
        <div class="mt-3">
          <Field name={:password_confirmation}>
            <Label class="label">
              <span class="label-text text-xs">
                {l("Confirm your password")}
              </span>
            </Label>
            <PasswordInput
              opts={placeholder: l("Enter the same password again")}
              required
              class="w-full input h-10 rounded input-bordered"
            />
            <ErrorTag />
          </Field>
        </div>
      </Inputs>


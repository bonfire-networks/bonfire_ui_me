      <div class="mt-6">
        <span class="block w-full rounded-md shadow-sm">
          <button type="submit" class="flex w-full  normal-case btn btn-primary place-content-center">
            {l("Sign up")}
          </button>
        </span>
      </div>

      <div class="flex py-4 pb-2 mt-6 border-t text-xs border-base-content/10 place-content-center">
        <p>
          {l("Do you already have an account?")}
          <LiveRedirect class="link link-primary" to={path(:login, :index)}>{l("Log in")}</LiveRedirect>
        </p>
      </div>
    </Form>
  </div>
</div>
<div class="grid px-4 md:px-0 md:grid-cols-2 gap-4 max-w-screen-md mx-auto w-full">
  <div
    :for={%{id: id, ap_base_uri: ap_base_uri, display_hostname: display_hostname} <- @instances}
    class="p-4 border rounded border-base-content/30 flex"
  >
    <LiveRedirect to={"/users/instance/#{id}"} class="grow">{display_hostname}</LiveRedirect>
    <a href={ap_base_uri} target="_blank"><#Icon iconify="heroicons-solid:external-link" class="w-4 h-4" /></a>
  </div>
</div>
